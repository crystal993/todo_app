    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>

    <!-- socket.io 필요 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.4.1/socket.io.js" ></script>
    
    <div>채팅방</div>
    <input id="input1">
    <div id="content"></div>
    <button id="send">서버에 메세지 보내기</button>
    <button id="room1">채팅방1 입장</button>
    <button id="room1-send">채팅방1에서 메세지 보내기</button>

    <script>
        var socket = io();

        // 채팅방1 입장 버튼 
        $('#room1').click(function(){
          socket.emit('join-room', '채팅방 입장할래');
        });

        
        //채팅방1 사람들만 볼 수 있는 메세지
        $('#room1-send').click(function(){
          socket.emit('room1-send', '안녕 채팅방1 사람들' )
        });


        // 서버에게 웹소켓으로 실시간 메세지 보내기
        $('#send').click(function(){

          // socket.emit(작명, 메세지)
          socket.emit('user-send',$('#input1').val());

          //서버에게 받은 메세지 
          socket.on('broadcast', function(receivedData){
            // console.log(data);
            $("#content").append(`<div>${receivedData}</div`);
          });

        });
    </script>
    

